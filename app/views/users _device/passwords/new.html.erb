<div class="wrapper wrapper-full-page">
  <div
    class="full-page login-page"
    filter-color="black"
    data-image="<%= asset_url('login.jpeg')%>"
  >
    <div class="content">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
            <div class="card card-login card-hidden">
              <div class="card-header text-center" data-background-color="rose">
                <h4 class="card-title">Forgot your password ?</h4>
              </div>
              <div class="card-content">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="field form-group" , style="left:10px">
                    <%= f.label :email %><br/>
                    <%= f.email_field :email,
                                  autofocus: true,
                                  autocomplete: "email",
                                  class: "form-control" %>
                  </div>
                  <div class="actions category text-center">
                    <%= f.submit "Submit", class: "btn btn-rose" %>
                  </div>
                <% end %>
                <div class="social-line">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
