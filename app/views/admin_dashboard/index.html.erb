<div class="content">
 <div class="container-fluid">
   <div class="row">
     <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-icon" data-background-color="purple">
            <i class="material-icons">history</i>
          </div>
          <div class="card-content">
          <h1 class="card-title">Admin Dashboard</h1>
          <div class="toolbar">
          <!--        Here you can write extra buttons/actions for the toolbar              -->
          </div>
          <div class="material-datatables">
          </div>
      <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
  <thead>
    <tr>
      <th>Email</th>
      <th>Leaves Taken</th>
      <th>Paid Leaves</th>
      <th>Unpaid Leaves</th>
      <th>Pending Leave Requests</th>
      <th>Approved Upcoming Leaves</th>
      <th>Remaining Casual Leaves </th>
      <th>Remaining Sick Leaves</th>
      <th>Remaining Monthly Leaves</th>
    </tr>
  </thead>
  <tbody>
    <% @user_data.each do |data| %>
      <tr>
          <% if data[:email] != current_user.email %>
        <td><%= link_to data[:email], leave_details_user_path(data[:id]) %></td>
        <td><%= data[:leaves_taken] %></td>
        <td><%= data[:paid_leaves] %></td>
        <td><%= data[:unpaid_leaves] %></td>
        <td><%= data[:pending_leave_requests] %></td>
        <td><%= data[:approved_upcoming_leaves] %></td>
        <td><%= data[:remaining_casual_leaves_taken_this_year]%></td>
        <td><%= data[:remaining_sick_leaves_taken_this_year]%></td>
        <td><%= data[:remaining_monthly_leaves_taken]%></td>
        <td><%= data[:total_leave_balance] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
       </div>
      </div>
     </div>
   </div>