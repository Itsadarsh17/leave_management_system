<div class="content">
 <div class="container-fluid">
   <div class="row">
     <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-icon" data-background-color="purple">
            <i class="material-icons">list</i>
          </div>
          <div class="card-content">
          <h2 class="card-title">Pending Leave Requests</h2>
          <div class="toolbar">
          <!--        Here you can write extra buttons/actions for the toolbar              -->
          </div>
          <div class="material-datatables">
          <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
            </div>
            <thead>
              <tr>
                <th>Reason</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Leave Type</th>
                <th>Status</th>
                <th>User</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @leave_applications.each do |leave_application| %>
                <tr>
                  <td><%= leave_application.reason %></td>
                  <td><%= leave_application.start_date %></td>
                  <td><%= leave_application.end_date %></td>
                  <td><%= leave_application.leave_type.humanize %></td>
                  <td><%= leave_application.status.humanize %></td>
                  <td><%= leave_application.user.email %></td>
                  <td>
                    <% if leave_application.status == "pending" %>
                      <%= link_to 'Accept', accept_leave_application_path(leave_application), method: :put %>
                      <%= link_to "Reject", reject_leave_application_path(leave_application), method: :put %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
       </div>
      </div>
     </div>
   </div>
</div>
