<h1>All Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.admin? ? 'Admin' : 'User' %></td>
        <td>
          <% unless user.admin? %>
            <%= button_to 'Promote to Admin', promote_to_admin_user_path(user), method: :post, data: { confirm: 'Promote this user to admin?' }, class: "btn btn-primary btn-sm" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
