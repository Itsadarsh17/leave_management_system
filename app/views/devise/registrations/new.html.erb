<div class="wrapper wrapper-full-page">
  <div class="full-page login-page" filter-color="black" data-image="<%= asset_url('login.jpeg')%>">
    <div class="content">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
            <div class="card card-login">
              <div class="card-header text-center" data-background-color="rose">
              <h2 class= "card-title">Sign up</h2>
              </div>
              <div class="card-content">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  
   <div class="input-group">
    <span class="input-group-addon">
      <i class="material-icons">person</i>
    </span>
    <div class="field form-group label-floating">
      <%= f.label :first_name, "Last Name", class: "control-label" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "form-control" %>
    </div>
  </div>

 <div class="input-group">
    <span class="input-group-addon">
      <i class="material-icons">person</i>
    </span>
    <div class="field form-group label-floating">
      <%= f.label :last_name, "Last Name", class: "control-label" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "form-control" %>
    </div>
  </div>

  <div class="input-group">
    <span class="input-group-addon">
      <i class="material-icons">email</i>
    </span>
    <div class="field form-group label-floating">
      <%= f.label :email, "Email", class: "control-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="input-group">
    <span class="input-group-addon">
      <i class="material-icons">lock_outline</i>
    </span>
    <div class="field form-group label-floating">
    <%= f.label :password, "Password", class: "control-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <div class="input-group">
    <span class="input-group-addon">
      <i class="material-icons">lock_outline</i>
    </span>
    <div class="field form-group label-floating">
      <%= f.label :password, "Password", class: "control-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions category text-center">
    <%= f.submit "Sign Up", class: "btn btn-rose btn-wd btn-lg" %>
  </div>
<% end %>

<div class="actions category text-center">
<%= render "devise/shared/links"%>
</div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
